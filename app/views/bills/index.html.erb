<h1 class="mb-4">Submitted Bills</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Type</th>
      <th>Amount</th>
      <th>Submitted By</th>
      <th>Department</th>
      <th>Date of Submission</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.bill_type %></td>
        <td><%= number_to_currency(bill.amount) %></td>
        <td><%= bill.submitted_employee.full_name %></td>
        <td><%= bill.submitted_employee.department.name if bill.submitted_employee.department %></td>
        <td><%= bill.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p class="font-weight-bold">Total Amount: <%= number_to_currency(Bill.total_amount) %></p>
<div class="d-flex justify-content-left">
  <%= link_to 'New Bill', new_bill_path, class: 'btn btn-success' %>
  <%= link_to 'Back to Employees', employees_path, class: 'btn btn-secondary' %>
</div>
